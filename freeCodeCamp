console.log("PROVES REPLEACE I SLICE")
let persona1 = "Yoel";

let fraseYoel = `El que mes li agrada al ${persona1} es escriure codi.`;
console.log(fraseYoel);

fraseDivertidaYoel = fraseYoel.replace("escriure codi.", "perdre al fifa.");
console.log(fraseDivertidaYoel);

fraseDivertidaYoel2 = fraseYoel.replace("escriure codi.","tryhardear al Hinge.");
console.log(fraseDivertidaYoel2);

console.log(fraseYoel.replace("escriure codi.", "sacar per baix."));
console.log(fraseYoel.replace("escriure codi.", "una bona fresqui."))

